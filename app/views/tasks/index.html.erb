<h1>Listing tasks</h1>
<% if logged_in? %>
<br />
<%= link_to 'New Task', new_user_task_path(current_user) %>
<% end %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Due date</th>
      <th>Category</th>
      <th>Posted By</th>
      <% if logged_in? %>
      <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.name %></td>
        <td><%= link_to task.description %></td>
        <td><%= link_to task.due_date %></td>
        <td><%= link_to task.category.name %></td>
        <td><%= task.user ? task.user.name : 'Anonymous' %></td>
        <% if logged_in? %>
          <td><%= link_to 'Edit', edit_user_task_path(current_user, task) %></td>
          <td><%= link_to 'Destroy', user_task_path(current_user, task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

